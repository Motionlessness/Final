<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Decimal.DecimalFragment">

    <TextView
        android:id="@+id/lblDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Decimal :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblHex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:text="Hexidecimal :"
        app:layout_constraintStart_toStartOf="@+id/lblDec"
        app:layout_constraintTop_toBottomOf="@+id/lblDec" />

    <EditText
        android:id="@+id/txtHex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@+id/txtDec"
        app:layout_constraintStart_toStartOf="@+id/txtDec"
        app:layout_constraintTop_toBottomOf="@+id/txtDec" />

    <TextView
        android:id="@+id/lblOct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:text="Octal :"
        app:layout_constraintStart_toStartOf="@+id/lblHex"
        app:layout_constraintTop_toBottomOf="@+id/lblHex" />

    <EditText
        android:id="@+id/txtOct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@+id/txtHex"
        app:layout_constraintStart_toStartOf="@+id/txtHex"
        app:layout_constraintTop_toBottomOf="@+id/txtHex" />

    <TextView
        android:id="@+id/lblBin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Binary :"
        app:layout_constraintStart_toStartOf="@+id/lblOct"
        app:layout_constraintTop_toBottomOf="@+id/lblOct" />

    <EditText
        android:id="@+id/txtBin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@+id/txtOct"
        app:layout_constraintStart_toStartOf="@+id/txtOct"
        app:layout_constraintTop_toBottomOf="@+id/txtOct" />

    <Button
        android:id="@+id/buttCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>